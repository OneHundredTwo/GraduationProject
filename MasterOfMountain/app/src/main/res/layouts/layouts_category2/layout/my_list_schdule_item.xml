<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/schDatetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2017.08.29" />
            <LinearLayout
                android:id="@+id/schBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView android:id="@+id/schTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Schedule Title"
                    ></TextView>
                <TextView android:id="@+id/schContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Schedule Content"
                    ></TextView>
            </LinearLayout>
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnSchDelete"
            android:src="@drawable/trash_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:text="삭제"/>


    </LinearLayout>

</LinearLayout>