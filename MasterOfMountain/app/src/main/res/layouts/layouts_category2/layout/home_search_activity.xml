<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/map_view2"
            android:layout_width="match_parent"
            android:layout_height="566dp">
        </FrameLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent">
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btnRange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_margin="20dp"
                android:src="@drawable/ic_visibility_off_white_24dp"
                app:fabSize="mini"
                app:backgroundTint="#66BB6A"
                app:rippleColor="#C8E6C9"/>
            <SlidingDrawer
                android:id="@+id/slidingdrawer"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:content="@+id/contentLL"
                android:layout_alignParentBottom="true"
                android:handle="@+id/btnHandle"
                android:orientation="vertical"
                android:allowSingleTap="true"
                android:background="@android:color/transparent">
                <!--<TextView
                    android:id="@+id/btnHandle"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:background="#66BB6A"/>-->
                <RelativeLayout
                    android:id="@+id/btnHandle"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:background="#66BB6A">
                    <TextView
                        android:id="@+id/handleText"
                        android:layout_marginLeft="15dp"
                        android:textSize="25dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <ImageView
                        android:id="@+id/handleImg"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/contentLL"
                    android:background="#66BB6A"
                    android:orientation="vertical">
                    <View
                        android:layout_height="2dp"
                        android:layout_width="wrap_content"
                        android:background="#C8E6C9">
                    </View>
                    <ListView
                        android:id="@+id/listView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#66BB6A"
                        android:divider="#00000000">
                    </ListView>
                </LinearLayout>
            </SlidingDrawer>
        </RelativeLayout>
    </FrameLayout>
</RelativeLayout>