<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/map_view2"
            android:layout_width="match_parent"
            android:layout_height="566dp"
            android:background="@android:color/transparent">
        </FrameLayout>
        <!-- health -->
        <LinearLayout
            android:id="@+id/healthlayout"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:background="@drawable/frame2"
            android:orientation="vertical"
            android:visibility="visible"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id = "@+id/timer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text = "00:00:00"
                android:textSize="16dp"
                android:layout_gravity="left"
                android:gravity="center|left"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="걸음수 : "
                android:textSize="16dp"
                android:gravity="center|left"
                android:layout_weight="1"/>
            <TextView
                android:id = "@+id/step"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16dp"
                android:gravity="center|left"
                android:layout_weight="1"/>
        </LinearLayout>
</LinearLayout>
        <!-- health -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:background="@android:color/transparent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent">
                <SlidingDrawer
                    android:layout_alignParentRight="true"
                    android:id="@+id/slide"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:content="@+id/content"
                    android:orientation="horizontal"
                    android:topOffset="60dp"
                    android:handle="@+id/fab_point">
                    <ImageView
                        android:id="@+id/fab_point"
                        android:layout_width="20dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_keyboard_arrow_left_white_48dp"
                        android:background="@drawable/handlebtn"
                        android:textColor="#FFFFFFFF"/>
                    <LinearLayout
                        android:id="@+id/content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/slidingdrawer"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:orientation="vertical"
                            android:background="#66BB6A">
                            <TextView
                                android:layout_gravity="center|center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textColor="#FFFFFFFF"
                                android:textSize="25dp"
                                android:text="내가 좋아요 한 사진"/>
                        </LinearLayout>
                        <View
                            android:layout_height="2dp"
                            android:layout_width="wrap_content"
                            android:background="#66BB6A"
                            android:layout_marginBottom="2dp">
                        </View>
                        <GridView
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:id="@+id/gridView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:columnWidth="100dp"
                            android:drawSelectorOnTop="true"
                            android:gravity="center"
                            android:listSelector="#7F8C8C8C"
                            android:numColumns="2"
                            android:stretchMode="columnWidth"
                            />
                    </LinearLayout>
                </SlidingDrawer>
            </RelativeLayout>
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btnStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="50dp"
                app:fabSize="mini"
                app:backgroundTint="#66BB6A"
                app:rippleColor="#C8E6C9"
                />
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btnStop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/btnStart"
                android:layout_marginBottom="50dp"
                app:fabSize="mini"
                app:backgroundTint="#66BB6A"
                app:rippleColor="#C8E6C9"
                android:visibility="gone"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@android:color/transparent">
            <SlidingDrawer
                android:id="@+id/slidingdrawer"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:content="@+id/contentLL"
                android:layout_alignParentBottom="true"
                android:handle="@+id/btnHandle"
                android:orientation="vertical"
                android:allowSingleTap="true"
                android:background="@android:color/transparent">
                <!--<TextView
                    android:id="@+id/btnHandle"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:background="#66BB6A"/>-->
                <RelativeLayout
                    android:id="@+id/btnHandle"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:background="#66BB6A">
                    <TextView
                        android:id="@+id/handleText"
                        android:layout_marginLeft="15dp"
                        android:textSize="25dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <ImageView
                        android:id="@+id/handleImg"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/contentLL"
                    android:background="#66BB6A"
                    android:orientation="vertical">
                    <View
                        android:layout_height="2dp"
                        android:layout_width="wrap_content"
                        android:background="#C8E6C9">
                    </View>
                    <ListView
                        android:id="@+id/listView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#66BB6A"
                        android:divider="#00000000">
                    </ListView>
                </LinearLayout>
            </SlidingDrawer>
        </RelativeLayout>
    </FrameLayout>
    <!--   </FrameLayout>-->
</RelativeLayout>