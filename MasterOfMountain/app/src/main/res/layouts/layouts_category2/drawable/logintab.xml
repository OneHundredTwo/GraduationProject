<?xml version="1.0" encoding="utf-8"?>
    <selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item>
            <layer-list>
                <item>
                    <shape android:shape="rectangle">
                        <padding
                            android:bottom="5dp"
                            />
                        <solid android:color="@color/background" />
                    </shape>
                </item>

                <item>
                    <shape android:shape="rectangle">
                        <solid android:color="@color/button" />
                    </shape>
                </item>
            </layer-list>
        </item>


        <item android:state_pressed="true" android:drawable="@color/buttonselect"/>
        <item android:state_focused="true" android:drawable="@color/buttonselect"/>

    </selector>
