<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:id="@+id/group1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="5"
            android:layout_margin="3dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="name"
            />
        <ImageView
            android:id="@+id/editreply"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_edit_reply"
            android:visibility="visible"
            android:layout_alignTop="@+id/delreply"
            android:layout_toStartOf="@+id/delreply" />
        <ImageView
            android:id="@+id/delreply"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/trash_icon"
            android:layout_marginRight="15dp"
            android:background="@color/colorWhite"
            android:layout_alignTop="@+id/name"
            android:layout_alignParentEnd="true"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/replytxt"
            android:layout_alignLeft="@+id/name"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:text="time"
            android:textSize="10dp"/>
        <TextView
            android:id="@+id/replytxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_alignLeft="@+id/name"
            android:text="text"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:visibility="visible"
            />
        <EditText
            android:id="@+id/edittxt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_alignLeft="@+id/name"
            android:text="text"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:visibility="invisible"/>
        <Button
            android:id="@+id/btnedit"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:text="완료"
            android:textSize="10dp"
            android:background="@color/colorWhite"
            android:visibility="invisible"
            android:layout_marginEnd="19dp"
            android:layout_alignBottom="@+id/pic"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</LinearLayout>