<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <FrameLayout
        android:id="@+id/mtdetailLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mtPic"
            android:scaleType="fitXY"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            >
            <TextView
                android:id="@+id/mountain_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="산이름"
                android:textSize="30dp"/>
            <TextView
                android:id="@+id/mountain_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0000m"
                android:textSize="15dp"/>
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/mountain_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tab_MTInfo"
            android:layout_width="0dip"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@drawable/tab_color_selector"
            android:background="@drawable/tab_bg_selector"
            android:text="산 정보"/>
        <TextView
            android:id="@+id/tab_MTCourse"
            android:layout_width="0dip"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@drawable/tab_color_selector"
            android:background="@drawable/tab_bg_selector"
            android:text="코스"/>
        <TextView
            android:id="@+id/tab_MTEm"
            android:layout_width="0dip"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@drawable/tab_color_selector"
            android:background="@drawable/tab_bg_selector"
            android:text="주변시설"/>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/mountain_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_alignParentBottom="true">
    </android.support.v4.view.ViewPager>

</LinearLayout>
