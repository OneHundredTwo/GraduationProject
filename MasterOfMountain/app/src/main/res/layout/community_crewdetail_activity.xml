<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background">
    <android.support.v7.widget.Toolbar
        android:id="@+id/crewdetail_toolbar"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        ><!--  app:theme 타이틀 색, 백버튼 흰색으로 변경-->
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="5dp"
        android:orientation="horizontal"
        android:background="@color/background"
        android:layout_below="@+id/crewdetail_toolbar"
        >
        <LinearLayout
            android:id="@+id/linearsub1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_margin="2dp"
            android:background="@drawable/frame"
            android:layout_weight="1"
            >
            <TextView
                android:background="#FCFCEC"
                android:id="@+id/crewdetail_club"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:text="동호회 : "
                android:textSize="15dp"
                android:typeface="monospace"
                android:gravity="center|left"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_margin="2dp"
            android:background="@drawable/frame"
            android:layout_weight="1"
            >
            <TextView
                android:background="#FCFCEC"
                android:id="@+id/crewdetail_region"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:text="지역:"
                android:textSize="15dp"
                android:typeface="monospace"
                android:gravity="center|left"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="@color/background"
        android:padding="5dp"
        android:layout_below="@+id/linear1"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_margin="2dp"
            android:background="@drawable/frame"
            android:layout_weight="1">
            <TextView
                android:background="#FCFCEC"
                android:id="@+id/crewdetail_mt"
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:layout_height="match_parent"
                android:text="산 :"
                android:textSize="15dp"
                android:typeface="monospace"
                android:gravity="center|left"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_margin="2dp"
            android:background="@drawable/frame">
            <TextView
                android:background="#FCFCEC"
                android:id="@+id/crewdetail_ID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="크루관리자 :"
                android:paddingLeft="10dp"
                android:textSize="15dp"
                android:typeface="monospace"
                android:gravity="center|left"
                android:layout_weight="1"/>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/linear3"
        android:background="@color/background"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_margin="2dp"
            android:background="@drawable/frame"
            >
            <TextView
                android:background="#FCFCEC"
                android:id="@+id/crewdetail_course"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:text="코스 : "
                android:textSize="15dp"
                android:typeface="monospace"
                android:gravity="center|left"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/linear4"
        android:background="@color/background"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_margin="2dp"
            android:background="@drawable/frame"
            >
            <TextView
                android:background="#FCFCEC"
                android:id="@+id/crewdetail_join"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:text="인원 : "
                android:textSize="15dp"
                android:typeface="monospace"
                android:gravity="center|left"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear6"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/linear5"
        android:background="@color/background"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_margin="2dp"
            android:background="@drawable/frame"
            >
            <TextView
                android:background="#FCFCEC"
                android:id="@+id/crewdetail_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:text="날짜 : "
                android:textSize="15dp"
                android:typeface="monospace"
                android:gravity="center|left"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"></LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:background="@color/background"
        android:layout_below="@+id/linear6"
        android:layout_above="@+id/lastlinear"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/frame"
                android:orientation="vertical" android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_marginTop="6dp"
                    android:background="#FCFCEC"
                    android:id = "@+id/crewdetail_Content"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top|left"
                    android:textSize="15dp"
                    android:typeface="monospace"/>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/background"
                android:padding="3dp"
                android:layout_marginLeft="30dp"
                android:text="내용 : "
                android:textSize="15dp"
                android:typeface="monospace"/>

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lastlinear"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
        <com.dd.processbutton.iml.ActionProcessButton
            android:background="@drawable/button"
            custom:pb_colorComplete="@color/green_complete"
            custom:pb_colorNormal="@color/button"
            custom:pb_colorPressed="@color/buttonselect"
            custom:pb_colorProgress="@color/purple_progress"
            android:id = "@+id/crewsubmit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="등록"
            android:textSize="20dp"
            android:layout_weight="1"
            custom:pb_textComplete="완료"
            custom:pb_textProgress="Loading.."
            custom:pb_textError="Error"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.8"/>
        <Button
            android:background="@drawable/button"
            android:id="@+id/crewcancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="취소"
            android:textSize="20dp"
            android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>
